<%- include('./partials/header.ejs')%>
<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1 id="perguntas" >Perguntas</h1>
        <a href="/perguntar">
           <button class="btn btn-primary form-control">Fazer Pergunta</button>
        </a>
        <hr>
        <%perguntas.forEach(pergunta =>{%>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id%>"><button class="btn btn-primary form-control" >Responder</button></a>
                </div>
            </div>
        <% })%>
    </div>
</body>
<%- include('./partials/footer.ejs')%>
